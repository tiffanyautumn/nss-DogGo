@model DogGo.Models.ViewModels.WalkerViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h1 class="mb-4">@Model.Walker.Name</h1>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src="@Model.Walker.ImageUrl" />
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Neighborhood.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>
    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Recent Walks</h1>

            <table>
                <tr>
                    <th>Date</th>
                    <th>Client</th>
                    <th>Duration</th>
                </tr>
                @foreach (Walk walk in Model.Walks)
                {
                    <tr>
                        <td>@walk.Date</td>
                        <td>@walk.Dog.Owner.Name</td>
                        <td>@TimeSpan.FromSeconds(walk.Duration).ToString(@"mm") min</td>
                    </tr>
                            
                }
            </table>
        </section>
    
        <section class="col-lg-4 col-md-8 container mt-5">
            <h1>Total Walk Time</h1>
            <ul class="list-group mt-4">
            <li>@Model.TotalDuration</li>
            </ul>
        </section>
    </div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.Walker.Id  }) |
    <a asp-action="Index">Back to List</a>
    <a asp-action="CreateWalk">Create a Walk</a>
</div>
